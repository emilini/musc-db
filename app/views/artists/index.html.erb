<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.genre.name %></td>
        <td><%= link_to fa_icon('eye', text: "Show"), artist %></td>
        <td><%= link_to fa_icon('pencil', text: "Show"), edit_artist_path(artist) %></td>
        <td><%= link_to fa_icon('trash-0', text: "Show"), artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-info"><%= link_to 'New Artist', new_artist_path %></button>

